{% extends 'base.html.twig' %}

{% block title %}Entrepot index{% endblock %}

{% block body %}
    <h1>Entrepot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entrepot in entrepots %}
            <tr>
                <td>{{ entrepot.id }}</td>
                <td>{{ entrepot.nom }}</td>
                <td>{{ entrepot.ville }}</td>
                <td>
                    <a href="{{ path('app_entrepot_show', {'id': entrepot.id}) }}">show</a>
                    <a href="{{ path('app_entrepot_edit', {'id': entrepot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_entrepot_new') }}">Create new</a>
{% endblock %}
