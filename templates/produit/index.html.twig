{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üì¶ Nos Produits</h1>
        <a href="{{ path('app_produit_new') }}" class="btn btn-success">
            + Nouveau Produit
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>R√©f√©rence</th>
                        <th>Prix Vente</th>
                        <th>Cat√©gorie</th>
                        <th>Fournisseur</th>
                        <th>Actions</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.id }}</td>
                        <td><strong>{{ produit.nom }}</strong></td>
                        <td><span class="badge bg-secondary">{{ produit.reference }}</span></td>
                        <td>{{ produit.prixVente }} ‚Ç¨</td>
                        <td>
                            {# Affiche le nom de la cat√©gorie s'il y en a une #}
                            {% if produit.categorie %}
                                <span class="badge bg-info text-dark">{{ produit.categorie.nom }}</span>
                            {% else %}
                                <span class="text-muted">Aucune</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if produit.fournisseur %}
                                <span class="badge bg-warning text-dark">
                                    üè¢ {{ produit.fournisseur.nom }}
                                </span>
                            {% else %}
                                <span class="text-muted text-small">Non assign√©</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                        </td>
                        <td>
                            {% if produit.imageName %}
                                <img src="{{ asset('uploads/products/' ~ produit.imageName) }}" 
                                    alt="{{ produit.nom }}" 
                                    style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;">
                            {% else %}
                                <span class="text-muted">üì∑</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucun produit trouv√©</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}